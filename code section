#include <stdio.h>  

void FindSolution(double line1[], double line2[],double intersect_point[]) ;

int main()
{
    double line1[3],line2[3];
    double a1,a2,b1,b2,c1,c2; //dogru parametreleri
    double intersect_point[2]; // kesisim noktasi
    
    printf("1. Dogrunun Parametreleri:\n");
    printf("\n\t a:");
    scanf("%lf",&a1);
    printf("\t b:");
    scanf("%lf",&b1);
    printf("\t c:");
    scanf("%lf",&c1);


    printf("\n2. Dogrunun Parametreleri:\n");
    printf("\n\t a:");
    scanf("%lf",&a2);
    printf("\t b:");
    scanf("%lf",&b2);
    printf("\t c:");
    scanf("%lf",&c2);

    line1[0]=a1,line2[0]=a2,line1[1]=b1,line2[1]=b2,line1[2]=c1,line2[2]=c2;


    printf("\n\n%.2lfx + %.2lfy + %2.lf = 0",a1,b1,c1);
    printf("\n\n%.2lfx + %.2lfy + %2.lf = 0",a2,b2,c2);
    
    FindSolution(line1,line2,intersect_point);

    return 0;
}
void FindSolution(double line1[], double line2[],double intersect_point[]) 
{
    double m1= -line1[0]/line1[1];  //ilk dogrunun egimi      -b1/a1
    double m2= -line2[0]/line2[1];  // ikinci dogrunun egimi  -b2/a2

    if(m1 != m2) 
    {
        intersect_point[0]=(line1[1]*line2[2]-line1[2]*line2[1])/(line1[0]*line2[1]-line1[1]*line2[0]);
        intersect_point[1]=(line1[0]*line2[2]-line2[0]*line1[2])/(line2[0]*line1[1]-line2[1]*line1[0]);

        printf("\n\nDogrular (%.2lf, %.2lf) noktasinda kesisiyor.",intersect_point[0],intersect_point[1]);
    }
    else
    {
        if(line1[0]/line2[0] == line1[1]/line2[1] &&line1[0]/line2[0] == line1[2]/line2[2])
            printf("\nDogrular ust uste cakismaktadir.");
        else if(line1[0]/line2[0] == line1[1]/line2[1] && line1[0]/line2[0] != line1[2]/line2[2])
            printf("\nDogrular birbirine paralel olup kesismemektedir.");
    }      
    printf("\n--------------------------------------");
}
